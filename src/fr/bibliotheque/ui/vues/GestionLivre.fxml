<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.bibliotheque.ui.controllers.GestionLivreController">
    <children>
        <!-- Barre de navigation -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRetour" style="-fx-background-color: transparent; -fx-text-fill: white;" text="&lt; Retour" />
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestion des Livres" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Text>
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>

        <!-- Contenu principal -->
        <VBox layoutY="50.0" prefHeight="550.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- Barre de recherche -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="searchField" prefHeight="30.0" prefWidth="200.0" promptText="Rechercher un livre..." />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                    </children>
                </HBox>

                <!-- Table des livres -->
                <TableView fx:id="livresTable" prefHeight="300.0" prefWidth="760.0" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="titreColumn" prefWidth="200.0" text="Titre" />
                        <TableColumn fx:id="auteurColumn" prefWidth="150.0" text="Auteur" />
                        <TableColumn fx:id="isbnColumn" prefWidth="150.0" text="ISBN" />
                        <TableColumn fx:id="disponibleColumn" prefWidth="100.0" text="Disponible" />
                    </columns>
                </TableView>

                <!-- Formulaire d'ajout/modification -->
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Titre:" />
                        <TextField fx:id="titreField" GridPane.columnIndex="1" />
                        <Label text="Auteur:" GridPane.rowIndex="1" />
                        <TextField fx:id="auteurField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="ISBN:" GridPane.rowIndex="2" />
                        <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleAjouter" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Ajouter" />
                                <Button mnemonicParsing="false" onAction="#handleModifier" style="-fx-background-color: #f1c40f; -fx-text-fill: white;" text="Modifier" />
                                <Button mnemonicParsing="false" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                            </children>
                        </HBox>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
