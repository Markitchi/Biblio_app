<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.bibliotheque.ui.controllers.DashController">
    <children>
        <!-- Barre de navigation -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRetour" style="-fx-background-color: transparent; -fx-text-fill: white;" text="&lt; Retour" />
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Bibliothèque" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Text>
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>

        <!-- Contenu principal -->
        <VBox alignment="CENTER" layoutY="50.0" prefHeight="550.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Text fx:id="welcomeText" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenue dans votre espace administrateur">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleGestionLivres" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Gestion des Livres">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleGestionAdherents" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Gestion des Adhérents">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleGestionEmprunts" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Gestion des Emprunts">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
