<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.bibliotheque.ui.controllers.GestionEmpruntsController">
    <children>
        <!-- Barre de navigation -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #2c3e50;">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRetour" style="-fx-background-color: transparent; -fx-text-fill: white;" text="&lt; Retour" />
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestion des Emprunts" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Text>
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>

        <!-- Contenu principal -->
        <VBox layoutY="50.0" prefHeight="550.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <!-- Barre de recherche -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <TextField fx:id="searchField" prefHeight="30.0" prefWidth="200.0" promptText="Rechercher un emprunt..." />
                        <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                    </children>
                </HBox>

                <!-- Table des emprunts -->
                <TableView fx:id="empruntsTable" prefHeight="300.0" prefWidth="760.0" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="idLivreColumn" prefWidth="100.0" text="ID Livre" />
                        <TableColumn fx:id="idAdherentColumn" prefWidth="100.0" text="ID Adhérent" />
                        <TableColumn fx:id="dateEmpruntColumn" prefWidth="150.0" text="Date Emprunt" />
                        <TableColumn fx:id="dateRetourPrevueColumn" prefWidth="150.0" text="Date Retour Prévue" />
                        <TableColumn fx:id="dateRetourEffectifColumn" prefWidth="150.0" text="Date Retour Effectif" />
                        <TableColumn fx:id="retourneColumn" prefWidth="100.0" text="Retourné" />
                    </columns>
                </TableView>

                <!-- Formulaire d'emprunt -->
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="ID Livre:" />
                        <TextField fx:id="idLivreField" GridPane.columnIndex="1" />
                        <Label text="ID Adhérent:" GridPane.rowIndex="1" />
                        <TextField fx:id="idAdherentField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Date Emprunt:" GridPane.rowIndex="2" />
                        <DatePicker fx:id="dateEmpruntPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Date Retour:" GridPane.rowIndex="3" />
                        <DatePicker fx:id="dateRetourPicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button mnemonicParsing="false" onAction="#handleEmprunt" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Enregistrer Emprunt" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <!-- Formulaire de retour -->
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="ID Emprunt:" />
                        <TextField fx:id="idEmpruntField" GridPane.columnIndex="1" />
                        <Button mnemonicParsing="false" onAction="#handleRetourLivre" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Enregistrer Retour" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
