<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.bibliotheque.ui.controllers.LoginController"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;">
        Connexion à la Bibliothèque
    </Text>

    <VBox spacing="10" maxWidth="300">
        <Label text="Login:" />
        <TextField fx:id="emailField" promptText="Entrez votre login" />
        
        <Label text="Mot de passe:" />
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" />
        
        <Button fx:id="loginButton" text="Se connecter" 
                onAction="#handleLogin"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                maxWidth="Infinity" />
        
        <Label fx:id="errorLabel" textFill="RED" visible="false" />
    </VBox>
</VBox>
